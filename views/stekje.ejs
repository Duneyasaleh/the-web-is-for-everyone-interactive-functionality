  <div class="home_page-exinfo">
    <div>
      <img src="/assets/remedy.png" alt="Stekje ruilen">
      <h2>Giftig</h2>
      <p><%= stekje.giftig  %></p>
    </div>
    <div>
      <img src="/assets/watering-plants.png" alt="Stekje ruilen">
      <h2>Voeding</h2>
      <p><%= stekje.voeding  %></p>
    </div>
    <div>
      <img src="/assets/save-the-planet.png" alt="Stekje ruilen">
