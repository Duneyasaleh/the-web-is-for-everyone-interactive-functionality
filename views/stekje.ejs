    <section class="plant-register">
     <article class="plant-register_form" id="registreren">
      <h2 class="stekje-aanmelden-form_h1">Stekje registreren :</h2>
      <form action="/stekjes" method="post">
        <label for="voornaam">Voornaam *</label>
        <input type="text" id="voornaam" name="Voornaam" required>
    
        <label for="achternaam">Achternaam *</label>
        <input type="text" id="achternaam" name="Achternaam" required>

        <label for="email">E-mail *</label>
        <input type="email" id="email" name="Email" required>
    
        <label for="telefoonnummer">Telefoonnummer</label>
        <input type="tel" id="telefoonnummer" name="Telefoonnummer">

        <label for="datum">Ophaal datum</label>
        <input type="date" id="date" name="date">

        <label for="subject">Opmerking</label>
        <textarea id="subject" name="subject" style="height:150px" ></textarea>
    
        <input type="submit" value="Stekje aanmelden">
      </form>
      <img class="plant-register-img-form" src="../assets/plant-stem.png" alt="plant-stem">
     </article>
     <article class="plant-register_comments">
      <div>
        <h3>jan de vries</h3>
        <p>heeft <%= stekje.naam  %> geresserveerd ^_^<br>
         Opmerking
 
        </p>
      </div>
    </article>
    </section>

